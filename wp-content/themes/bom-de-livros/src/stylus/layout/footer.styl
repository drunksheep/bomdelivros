#hull {
    background-color #fafafa    
    padding-top 4vh
}

.footer-list {
    .half {
        & + .half {
            @media $small-desktop-min {
                padding-bottom: 10px;
                margin-bottom: 10px;
            }
        }
    }

    li {
        &:not(.half) {
            & + li {
                padding-top: 10px;
                margin-top: 10px;
            }
        }
    }
}

.footer-title {
    @media $small-desktop-min {
        margin-top: 15px;
    }
}

.copyright {
    border-top: 1px solid #e1e1e1;
    background-color $primary
    margin-top: 8vh;
    padding-top: 35px;
    padding-bottom: 35px;
}