#masthead {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 20;
    border-bottom: 1px solid lighten($gray, 30);
    background-color: #fff;
}

.trigger-menu {
    background-color: transparent;
    padding: 15px;
    border: 1px solid lighten($gray, 30);
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    min-width: 150px;
    @extend .transitioned-basic;

    &:hover {
        box-shadow: inset 0 0 5px 0 lighten($gray, 30);
    }
}

.search-and-menu {
    #search {
        min-height: 50px;
        border: 1px solid lighten($gray, 30);
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        min-width: 500px;
        border-left: 0;
        font-size: 14px;
        color: $font;
    }
}

.user-auth {
    min-width: 300px;
}

#user-identification {
    width: 100%;
    display: block;
    min-height: 50px;
    background-color: lighten($primary, 20);
    text-align: center;
    line-height: 48px;
    @extend .t-r, .bold, .transitioned-basic;
    border-radius: 15px;
    box-shadow: 5px 5px 5px rgba($primary, 0.15);

    &:hover {
        background-color: $primary;
        box-shadow: 7px 7px 7px rgba($primary, 0.3);

        i {
            color: #FFF;
        }
    }

    i {
        margin-right: 15px;
        @extend .transitioned-basic;
    }
}

.nav-tab {
    padding-top: 10px;
    padding-bottom: 10px;
}