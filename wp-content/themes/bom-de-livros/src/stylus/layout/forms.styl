.field-basic {
    padding: 5px 10px;
    width: 100%;
    transition: all 0.35s ease;
    min-height: 38px;

    &:focus, &:active {
        box-shadow: inset 0 0 10px 0 rgba(#000, 0.25);
    }
}

.field-primary {
    @extend .field-basic;
    border: 1px solid $primary;    
}

.field-minimal {
    @extend .field-basic;
    width: 65px;
}
