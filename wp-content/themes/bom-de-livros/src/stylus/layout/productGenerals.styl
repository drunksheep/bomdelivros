.product-thumb-wrapper {
    img {
        border-radius: 10px;
        height: auto !important; 
        width: auto !important
    }
}

.discount, .onsale {
    position: absolute;
    left: 5px;
    top: 20px;
    padding: 10px 20px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    font-size: 18px;
    font-weight: 700;
    color: #FFF;
    background-color: $primary;
}

.price {
    @extend .margin-xxxs, .full;

    del {
        bdi {
            @extend .striked, .t-lig, .t-s;
        }

        & + ins {
            margin-left: 7px;
        }
    }

    bdi {
        @extend .t-r, .bold;
    }
}