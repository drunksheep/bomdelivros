// Testeira
.icon-square {
    min-height: 80px;
    width: 80px;
    background: lighten($primary, 40);
    border-radius: 10px;
    text-align: center;
    @extend .pos-r;

    i {
        font-size: 38px;
        color: $primary;
        absoluteCenter();
    }
}

.forepart-text {
    @media $small-desktop-min {
        width: 70%;
    }
}

div.forepart-text {
    display: flex;
    flex-flow: column wrap;
    justify-content: space-between;
}

// Bloco de recomendandos / populares
.recommended-block {
    .half {
        background-color: #000;
        border-radius: 15px;
        box-shadow: 0 0 10px 0 rgba(#fff, 0.1);
        position: relative;
        overflow: hidden;

        &:before, &:after {
            content: '';
            position: absolute;
            border-radius: 50%;
            background-color: rgba(#000, 0.04);
            z-index: 2;
        }

        @media $small-desktop-min {
            min-height: 50vh;
            padding: 5vh;
        }

        @media $xl-desktop-min {
            min-height: 40vh;
            padding: 7vh;
        }
    }

    .recommended-for-you {
        background-color: $secondaryL20;
        
        &:before {
            width: 120px;
            height: 120px;
            top: -60px;
            left: -60px;
        }

        &:after {
            width: 160px;
            height: 160px;
            top: 10px;
            right: 15px;
        }
    }

    .popular-choices {
        background-color: $primaryL30;
    }

    .square-carousel {
        width: 100%;
    }

    .product {
        min-height: 180px;
        background-color: #000;
        border: 2px solid #FFF;
        border-radius: 7px;
    }

    .tns-outer {
        @extend .pos-r;
    }

    .tns-controls {
        absoluteVertical();
        width: 100%;
        z-index: 3;
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;

        button {
            height: 35px;
            width: 35px;
            padding: 0;
            color: transparent;
            border: 0;
            background-color: #fff;
            position: relative;
            border-radius: 50%;
            box-shadow: 0 0 5px 0 rgba(#000, 0.2);
            @extend .transitioned-basic;

            &:before {
                content: '';
                display: block;
                absoluteCenter();
                font-size: 22px;
                color: $primary;
                font-family: $fa;
                font-weight: 700;
            }

            &:hover {
                transform: scale(1.1);
            }
        }

        [data-controls='prev'] {
            margin-left: -15px;

            &:before {
                content: '\f053';
            }
        }

        [data-controls='next'] {
            margin-right: -15px;

            &:before {
                content: '\f054';
            }
        }
    }
}