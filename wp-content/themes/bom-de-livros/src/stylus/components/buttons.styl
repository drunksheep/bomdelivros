.variant {
	border: 0;
	background-color: transparent;
	padding: 0;
}

.btn-default {
	padding: 15px 40px;
	transition: all 0.35s ease;

	&.slimmer {
		padding: 12px 45px;
	}

	&.bigger {
		padding: 20px 40px;
	}
}

.submit-search {
	position: absolute;
	right: 0;
	height: 100%;
	width: 70px;
	border: 0; 
	background: lighten($primary, 20);
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	@extend .transitioned-basic;
	
	&:hover {
		background: $primary;
	}
}